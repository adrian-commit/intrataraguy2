<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./includes/head") %>
    <title>Registro</title>
    
    <link rel="stylesheet" href="resources/css/styles.css">
    <title>Register</title>
</head>
<body>

    <div class="register-form">
		<h1>Profesionales - TCE </h1>
		<form action="/create" method="POST">
            <label for="user">Nombre de Usuario</label>
                <input 
                type="text" 
                name="userName" 
                required tabindex="1" 
                autofocus
                >            
            <label for="email">Email</label>
                <input 
                type="email" 
                name="email" 
                required tabindex="2"
                >
            <label for="pass">Password</label>
			 <input 
             type="password" 
             name="pass"
             >
            <label for="rol">Rol</label>                          
            <select 
            id="rol" 
            name="rol" 
            class="select-css" 
            tabindex="3"
            >
                <option value="admin" selected>Admin</option>
                <option value="data entry">Data Entry</option>                    
            </select>

            <label for="team">Equipo</label>
            <select id="team" name="team" class="select-css" >
                <option value="Info 1">Info 1</option>
                <option value="Info 2">Info 2</option>
                <option value="Info 3">Info 3</option>
                <option value="Laboral">Laboral</option>      
            </select>

            
            <div style="display: inline;">             
            <a href="/login" class="btn-cancel">Cancelar</a><input type="submit" class="btn-save" value="Cargar">           
            </div>
		</form>		
	
   
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</div>

    <% if(typeof alert != "undefined") {  %>
        <script>
            Swal.fire({
                title:'<%= alertTitle%>',
                text:'<%= alertMassage%>',
                icon:'<%= alertIcon%>',
                showConfirmButton:'<%= showConfirmButton%>',
                timer:'<%= timer%>',
            }).then(()=>{
                window.location='/<%= ruta %>'
            })

        </script>    

    <%  } %> 

</body>
</html>