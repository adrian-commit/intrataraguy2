<!DOCTYPE html>
<html lang="en">
                   
<head>
	<%- include("./includes/head") %> 
    <title>TCE</title> 
    <link href="resources/css/menuLateral.css" rel="stylesheet">
    <link href="resources/css/formul.css" rel="stylesheet">
    <link href="resources/css/graficos.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/41bcea2ae3.js" crossorigin="anonymous"></script>
    <script src="../../resources/js/spinner.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300" rel="stylesheet" />
</head>

<!--Menu Vertical-->
<body id="body">
    <section class="spinner"></section>
    <main class="content">
        <%- include("./includes/menu")%>
        <h1>Actividades TCE</h1>
        <h3>Visualización de estadísticas globales</h3>

        <hr>

        <section class="cols-3">
            <figure>
                <h2>Cantidad Servicios</h2>
                <article id="Kpis"> 
                <h1><%= services.length %></h1>
                </article>          
            </figure>

            <figure>
                <h2>Cantidad Clientes</h2>
                <article>
                <h1><%= clients.length %></h1>
                </article>
            </figure>
            
            <figure>
                <h2>Cantidad Tareas</h2>
                <article>
                    <h1><%= tasks.length %></h1>
                    </article>
            </figure>

        </section> 

        <section class="cols-2">
            <figure>
                <p>Comparativa Tareas</p>
                <h3>Registros Utilizados</h3>
                <canvas id="chartTareas"></canvas>
            </figure>

            <figure>
                <p>Comparativo General</p>
                <h3>Servicios</h3>
                <canvas id="chartServicios"></canvas>
            </figure>
        </section>

        <section class="cols-3">
            <figure>
                <p>Comparativo de Servicios</p>
                <h3>Tipo de Acividad</h3>
                <canvas id="chart3"></canvas>
            </figure>

            <figure>
                <p>Comparativo de clientes</p>
                <h3>Clientes</h3>
                <canvas id="chart4"></canvas>
            </figure>

            <figure>
                <p>Comparativo de Tareas</p>
                <h3>Tareas por Cliente</h3>
                <canvas id="chart5"></canvas>
            </figure>
        </section>

        <section class="cols-1">
            <figure>
                <p>Evolutivo Anual</p>
                <h3>Comportamiento Tareas</h3>
                <canvas id="chartTareas**"></canvas>
            </figure>
        </section>

       

    </main>

    <!-- ChartJS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>

    <!-- Styles for charts -->
    <script src="./resources/js/helpers.js"></script>

    <!-- DCharts development -->
    <script src="./resources/js/app2.js"></script>
    <script src="./resources/js/app3.js"></script>
    <script src="./resources/js/spinner.js"></script>
</body>




    

        <script src="./resources/js/menulateral.js"></script>

</html>