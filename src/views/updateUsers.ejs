<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./includes/head") %>
    <title>Actualizando <%= usuario.userName %> </title>
    <link rel="stylesheet" href="/resources/css/styles.css">
</head>
<body>

    <div class="register-form">
		<h1>Profesionales - TCE </h1>
		<form action="/users/modifyUser/<%= usuario.id %>?m=PUT" method="POST">
            <label for="user">Nombre de Usuario</label>
                <input 
                type="text" 
                name="userName" 
                required tabindex="1" 
                autofocus
                value="<%= usuario.userName %> "
                >            
            <label for="email">Email</label>
                <input 
                type="email" 
                name="email" 
                required tabindex="2"
                value="<%= usuario.email %> "
                >
            <label for="pass">Password</label>
			 <input 
             type="password" 
             name="pass"
             >
            <label for="rol">Rol</label>                          
            <select 
            id="rol" 
            name="rol" 
            class="select-css" 
            tabindex="3"
            >
                <option value="admin" <%= usuario.is_admin == "true" ? "selected" : null %>>Admin</option>
                <option value="data entry" <%= usuario.is_admin == "false" ? "selected" : null %>>Data Entry</option>                    
            </select>

            <label for="team">Equipo</label>
            <select id="team" name="team" class="select-css" >
                <option value="Info 1" <%= usuario.equipo.name == "Info 1" ? "selected" : null %>>Info 1</option>
                <option value="Info 2" <%= usuario.equipo.name == "Info 2" ? "selected" : null %>>Info 2</option>
                <option value="Info 3" <%= usuario.equipo.name == "Info 3" ? "selected" : null %>>Info 3</option>
                <option value="Info 4" <%= usuario.equipo.name == "Info 4" ? "selected" : null %>>Info 4</option>
                <option value="Laboral" <%= usuario.equipo.name == "Laboral" ? "selected" : null %>>Laboral</option>      
            </select>

            
            <div style="display: inline;">             
            <a href="/users" class="btn-cancel">Cancelar</a><input type="submit" class="btn-save" value="Cargar">           
            </div>
		</form>		
	
   
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</div>

    <% if(typeof alert != "undefined") {  %>
        <script>
            Swal.fire({
                title:'<%= alertTitle%>',
                text:'<%= alertMassage%>',
                icon:'<%= alertIcon%>',
                showConfirmButton:'<%= showConfirmButton%>',
                timer:'<%= timer%>',
            }).then(()=>{
                window.location='/<%= ruta %>'
            })

        </script>    

    <%  } %> 

</body>
</html>