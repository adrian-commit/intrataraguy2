<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/styles.css">
  
    <title>Clientes</title>
</head>
<body>
    
    <div class="register-form">
		<h1>Servicios </h1>
		<form action="/createClient" method="POST">
            <label for="typeActivity">Area</label>                          
                <select id="rol" name="typeActivity" class="select-css" tabindex="7">
                    <option value="Servicio" selected>IMPUESTOS</option>
                    <option value="Agropecuaria">LABORAL</option>
                    <option value="Contruccion">CONTABILIDAD</option>
                    <option value="Unipersonal">ADMINISTRACION</option>                    
                </select>
            <br>
        	<form action="/createClient" method="POST">
                    <label for="typeActivity">Tipo de Impuesto</label>                          
                        <select id="rol" name="typeActivity" class="select-css" tabindex="7">
                            <option value="Servicio" selected>IVA</option>
                            <option value="Agropecuaria">INGRESOS BRUTOS</option>
                            <option value="Contruccion">IMPUESTO A LAS GANANCIAS</option>
                            <option value="Unipersonal">CONVENIO MULTILATERAL</option>
                            <option value="Unipersonal">TASAS Y SERVICIOS</option>
                            <option value="Unipersonal">CONVENIO MULTILATERAL</option>
                            <option value="Unipersonal">RETENCIONES Y PERCEPCIONES</option>
                            <option value="Unipersonal">MONOTRIBUTO</option>
                            <option value="Unipersonal">SEGURIDAD SOCIAL</option>  
                            <option value="Unipersonal">REGIMEN INFORMATIVOS</option>  
                            <option value="Unipersonal">OTROS REGIMENES INFORMATIVOS</option>                      
                        </select>
            <br>
            <label for="typeActivity">Ambito de Aplicacion</label>                          
            <select id="rol" name="typeActivity" class="select-css" tabindex="7">
                <option value="Servicio" selected>MUNICIPAL</option>
                <option value="Agropecuaria">PROVINCIAL</option>
                <option value="Contruccion">NACIONAL</option>                    
            </select>
            <br>
            <label for="officesQuantity">Cantidad Sucursales</label>
                <select id="rol" name="officesQuantity" class="select-css" tabindex="7">
                    <option value="0 a 10" selected>0 a 5</option>
                    <option value="10 a 50">5 a 100</option> 
                </select>
            <br>
             <label for="typeActivity">Tipo de Actividad</label>                          
                <select id="rol" name="typeActivity" class="select-css" tabindex="7">
                    <option value="Servicio" selected>Servicio</option>
                    <option value="Agropecuaria">Agropecuaria</option>
                    <option value="Contruccion">Contruccion</option>
                    <option value="Unipersonal">Unipersonal</option>
                    <option value="Comercial">Comercial</option>                    
                </select>
                <br>
                <br> 

                <label for="rol">Tipo de Persona</label>                          
                <select id="rol" name="typePerson" class="select-css" tabindex="7">
                    <option value="Fisica" selected>Fisica</option>
                    <option value="Juridica">Juridica</option>                    
                </select>
             <br>
             <br> 
             <br>  
        
            <div style="display: inline;">             
            <a href="/servicios" class="btn-cancel">Cancelar</a><input type="submit" class="btn-save" value="Cargar">           
            </div>
		</form>		
	</div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <% if(typeof alert != "undefined") {  %>
        <script>
            Swal.fire({
                title:'<%= alertTitle%>',
                text:'<%= alertMassage%>',
                icon:'<%= alertIcon%>',
                icon:'<%= %>',
                showConfirmButton:'<%= showConfirmButton%>',
                timer:'<%= timer%>',
            }).then(()=>{
                window.location='/<%= ruta %>'
            })

        </script>    

    <%  } %> 

</body>
</html>